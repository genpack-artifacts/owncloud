{
    packages: [
        "genpack/paravirt",

        // php74
        "www-servers/apache",
        "dev-libs/libedit",
        "media-libs/libaom",
        "dev-libs/libzip",
        "net-nds/openldap",
        "dev-libs/jansson",
        "x11-libs/libXpm",
        "media-libs/tiff-compat",
        "media-libs/libjpeg-turbo",
        "media-libs/libwebp",

        "dev-db/mysql",
        "mail-mta/postfix",
        "net-fs/samba",
        "media-video/ffmpeg",
        "dev-db/redis",
        "net-analyzer/zabbix",
        "dev-util/trace-cmd",

        "net-vpn/frp"
    ],
    buildtime_packages: [
        //"@php74"
        "app-arch/rpm2targz",
        "dev-util/patchelf",
    ],
    accept_keywords: {
        "net-vpn/frp": null,
    },
    use:{
        "www-servers/apache": "APACHE2_MODULES: http2 proxy proxy_connect proxy_http proxy_ajp proxy_fcgi remoteip",
        "net-analyzer/zabbix": "curl -frontend -mysql proxy -server snmp openipmi ssh libxml2 -postgres  sqlite",
        "net-analyzer/fping":"suid",
        "dev-libs/jemalloc": "stats"
    },
    license:{
        "net-analyzer/fping":"fping",
        "dev-db/redis": "SSPL-1"
    },
    services:["apache2", "mysqld", "postfix", "redis"]
}
